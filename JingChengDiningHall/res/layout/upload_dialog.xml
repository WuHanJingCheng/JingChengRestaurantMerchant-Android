<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView 
	    android:id="@+id/upload_iv"
	    android:layout_width="@dimen/x400"
	    android:layout_height="@dimen/x400"
	    android:layout_centerInParent="true"
	    android:src="@drawable/upload_iv"/>
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/textcolor2"
	    android:layout_below="@+id/upload_iv"
	    android:layout_marginTop="@dimen/x200"
	    android:layout_centerHorizontal="true"
	    android:textSize="@dimen/s50"
	    android:text="正在上传,请稍候..."/>
	
</RelativeLayout>
