<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:focusable="true" 
    android:focusableInTouchMode="true"
    android:background="@drawable/login_bg">
    
    <Button 
	    android:id="@+id/bt_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/x62"
	    android:layout_marginLeft="@dimen/x40"
	    android:background="@drawable/register_back"/>
	<TextView 
	    android:id="@+id/tv_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/bt_back"
	    android:layout_marginTop="@dimen/x62"
	    android:layout_marginLeft="@dimen/x20"
	    android:textSize="16sp"
	    android:text="返回登陆"/>
    
	<EditText 
	    android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textcolor1"
        android:layout_marginTop="@dimen/x424"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/register_succeed_name"
        android:drawablePadding="@dimen/x30"
        android:textColor="@color/textcolor2"
        android:hint="请输入真实姓名"
        android:background="@drawable/login_edit_bg"
        android:textSize="18sp"/>
	<EditText 
	    android:id="@+id/et_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textcolor1"
        android:layout_marginTop="@dimen/x30"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_name"
        android:drawableLeft="@drawable/register_succeed_pw"
        android:drawablePadding="@dimen/x30"
        android:textColor="@color/textcolor2"
        android:hint="请输入密码"
        android:background="@drawable/login_edit_bg"
        android:textSize="18sp"/>
	<EditText 
	    android:id="@+id/et_pw_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textcolor1"
        android:layout_marginTop="@dimen/x30"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_pw"
        android:drawableLeft="@drawable/register_succeed_pw_again"
        android:drawablePadding="@dimen/x30"
        android:textColor="@color/textcolor2"
        android:hint="请再次输入密码"
        android:background="@drawable/login_edit_bg"
        android:textSize="18sp"/>
	
	<Button
	    android:id="@+id/bt_succeed" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/et_pw_again"
	    android:layout_marginTop="@dimen/x60"
	    android:text="完成"
	    android:gravity="center"
	    android:textColor="@color/textcolor2"
	    android:textSize="18sp"
	    android:background="@drawable/login_bt_login"/>
</RelativeLayout>
