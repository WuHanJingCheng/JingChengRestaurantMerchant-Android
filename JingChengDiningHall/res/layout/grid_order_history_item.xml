<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:background="@drawable/history_order_bg"
        android:layout_width="@dimen/x310"
        android:layout_height="@dimen/x250"
        android:orientation="vertical">
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="@dimen/x56"
            android:gravity="center_vertical"
            android:text="  订单号  dh12345"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            	
            <RelativeLayout 
                android:layout_weight="1"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
	
			    <RelativeLayout 
			        android:id="@+id/table_info"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="@dimen/x15"
			        android:layout_width="@dimen/x128"
			        android:layout_height="@dimen/x128">
				    <ImageView 
				        android:id="@+id/table_bg"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:src="@drawable/history_table"
				        android:scaleType="fitXY"/>
				    <TextView 
				        android:layout_width="@dimen/x65"
				        android:layout_height="@dimen/x23"
				        android:background="@drawable/history_people"
				        android:gravity="center"
				        android:layout_alignParentBottom="true"
				        android:textSize="8sp"
				        android:layout_marginBottom="@dimen/x20"
				        android:layout_centerHorizontal="true"
				        android:text="2人桌"/>
			    </RelativeLayout>
			    
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="1号桌"
			        android:textSize="10sp"
			        android:layout_marginTop="@dimen/x10"
			        android:layout_below="@+id/table_info"
			        android:layout_centerHorizontal="true"/>
			</RelativeLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:layout_weight="1">
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:textSize="12sp"
			        android:layout_gravity="center"
			        android:layout_marginTop="@dimen/x35"
			        android:text="298元"/>
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="@dimen/x25"
			        android:gravity="center"
			        android:textSize="12sp"
			        android:layout_gravity="center"
			        android:text="13.30元"/>
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="@dimen/x15"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="12sp"
			        android:text="2016-10-12"/>
			    
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
