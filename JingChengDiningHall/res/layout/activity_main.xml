<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:focusable="true" 
    android:focusableInTouchMode="true">
    
	
    <RelativeLayout 
        android:id="@+id/navi"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:textColor="@color/textcolor2"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_logo"
            android:layout_marginLeft="@dimen/x40"/>
        
         <EditText 
    	        android:id="@+id/et_search"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:background="@drawable/et_search"
    	        android:layout_toLeftOf="@+id/bt_search"
    	        android:gravity="center"  
    	        android:numeric="integer"
    	        android:textSize="16sp"
    	        android:layout_centerVertical="true"
    	        android:textColor="@color/textcolor1"
    	        android:hint="菜名"/>
    	    <Button 
    	        android:id="@+id/bt_search"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentRight="true"
    	        android:layout_marginRight="@dimen/x94"
    	        android:layout_centerVertical="true"
    	        android:background="@drawable/bt_search"/>
    </RelativeLayout>
    <View
        android:id="@+id/navi_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/navi"
        android:background="#B3AFAF"/>
    <LinearLayout 
        android:id="@+id/menu1"
        android:layout_below="@+id/navi_line"
        android:layout_width="@dimen/x192"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg1">
    	    <LinearLayout 
    	        android:id="@+id/menu1_wode"
    	        android:layout_marginTop="@dimen/x70"
    	        android:gravity="center_horizontal"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical">
    	        <ImageView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:src="@drawable/wode"/>
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:layout_gravity="center"
    	            android:text="我的"
    	            android:layout_marginTop="@dimen/x20"
    	            android:textColor="@color/white"
    	            android:textSize="16sp"/>
    	    </LinearLayout>
    	    <LinearLayout 
    	        android:id="@+id/menu1_caidan"
    	        android:layout_marginTop="@dimen/x100"
    	        android:gravity="center_horizontal"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical">
    	        <RelativeLayout 
    	            android:layout_width="match_parent"
    	            android:layout_height="@dimen/x120">
	    	        <ImageView 
	    	            android:layout_width="@dimen/x120"
	    	            android:layout_height="@dimen/x120"
	    	            android:layout_centerHorizontal="true"
	    	            android:src="@drawable/caidan"/>
	    	        <ImageView 
	    	            android:id="@+id/menu1_select1"
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content"
	    	            android:layout_alignParentRight="true"
	    	            android:layout_centerVertical="true"
	    	            android:src="@drawable/menu1_select"/>
	    	    </RelativeLayout>
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:layout_gravity="center"
    	            android:text="菜单"
    	            android:layout_marginTop="@dimen/x20"
    	            android:textColor="@color/white"
    	            android:textSize="16sp"/>
    	    </LinearLayout>
    	    <LinearLayout 
    	        android:id="@+id/menu1_dingdan"
    	        android:layout_marginTop="@dimen/x100"
    	        android:gravity="center_horizontal"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical">
    	        <RelativeLayout 
    	            android:layout_width="match_parent"
    	            android:layout_height="@dimen/x120">
	    	        <ImageView 
	    	            android:layout_width="@dimen/x120"
	    	            android:layout_height="@dimen/x120"
	    	            android:layout_centerHorizontal="true"
	    	            android:src="@drawable/dingdan"/>
	    	    	<ImageView 
	    	            android:id="@+id/menu1_select2"
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content"
	    	            android:layout_alignParentRight="true"
	    	            android:layout_centerVertical="true"
	    	            android:src="@drawable/menu1_select"
	    	            android:visibility="gone"/>
	    	    </RelativeLayout>
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:layout_gravity="center"
    	            android:text="订单"
    	            android:layout_marginTop="@dimen/x20"
    	            android:textColor="@color/white"
    	            android:textSize="16sp"/>
    	    </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/menu2"
        android:layout_below="@+id/navi_line"
        android:layout_toRightOf="@+id/menu1"
        android:layout_width="@dimen/x192"
        android:layout_height="match_parent"
        android:background="@color/white">
    	<RelativeLayout 
    	    android:id="@+id/menu2_dish"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:visibility="gone">
	  	    <LinearLayout 
	  	        android:id="@+id/type_add"
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:orientation="vertical"
	  	        android:layout_marginTop="@dimen/x40">
	  	        <ImageView 
			        android:id="@+id/iv_type"
			        android:layout_marginTop="@dimen/x30"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/x100"
			        android:layout_gravity="center"
			        android:src="@drawable/type_add"/>
			    <TextView 
			        android:id="@+id/tv_type"
			        android:gravity="center"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:text="添加分类"
			        android:textColor="@color/textcolor2"
			        android:layout_marginTop="@dimen/x10"/>
	  	    </LinearLayout>
	   	<ListView 
	        android:id="@+id/dishMenu_list"
	        android:divider="@null"
	        android:layout_below="@+id/type_add"
	        android:listSelector="@color/bg3"
	        android:cacheColorHint="@color/bg3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scrollbars="none"/>
    	</RelativeLayout>
    	<LinearLayout 
    	    android:id="@+id/menu2_order"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical"
    	    android:visibility="gone">
    	     <LinearLayout 
    	         android:id="@+id/all"
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:orientation="vertical"
	  	        android:layout_marginTop="@dimen/x40">
	  	        <ImageView 
			        android:layout_marginTop="@dimen/x30"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/x100"
			        android:layout_gravity="center"
			        android:src="@drawable/all"/>
			    <TextView 
			        android:gravity="center"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:text="全部"
			        android:textColor="@color/textcolor2"
			        android:layout_marginTop="@dimen/x10"/>
	  	    </LinearLayout>
    	     <LinearLayout 
    	         android:id="@+id/jiucan"
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:orientation="vertical"
	  	        android:layout_marginTop="@dimen/x40">
	  	        <ImageView 
			        android:layout_marginTop="@dimen/x30"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/x100"
			        android:layout_gravity="center"
			        android:src="@drawable/jiucan"/>
			    <TextView 
			        android:gravity="center"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:text="就餐中"
			        android:textColor="@color/textcolor2"
			        android:layout_marginTop="@dimen/x10"/>
	  	    </LinearLayout>
    	     <LinearLayout 
    	         android:id="@+id/kongxian"
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:orientation="vertical"
	  	        android:layout_marginTop="@dimen/x40">
	  	        <ImageView 
			        android:layout_marginTop="@dimen/x30"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/x100"
			        android:layout_gravity="center"
			        android:src="@drawable/kongxian"/>
			    <TextView 
			        android:gravity="center"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:text="空闲"
			        android:textColor="@color/textcolor2"
			        android:layout_marginTop="@dimen/x10"/>
	  	    </LinearLayout>
    	     <LinearLayout 
    	         android:id="@+id/jilu"
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:orientation="vertical"
	  	        android:layout_marginTop="@dimen/x40">
	  	        <ImageView 
			        android:layout_marginTop="@dimen/x30"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/x100"
			        android:layout_gravity="center"
			        android:src="@drawable/jilu"/>
			    <TextView 
			        android:gravity="center"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:text="记录"
			        android:textColor="@color/textcolor2"
			        android:layout_marginTop="@dimen/x10"/>
	  	    </LinearLayout>
    	</LinearLayout>
    </RelativeLayout>
    <View 
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/textcolor1"
        android:layout_below="@+id/navi_line"
        android:layout_toRightOf="@+id/menu2"/>
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navi_line"
        android:layout_toRightOf="@+id/line"/>
</RelativeLayout>
