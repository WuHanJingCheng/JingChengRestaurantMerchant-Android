<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/x10">
    <RelativeLayout 
        android:id="@+id/dish_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_bg"
        android:visibility="visible">
        
        <ImageView 
            android:id="@+id/iv_dish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x386"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/x17"
            android:background="@drawable/dish_bg"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_dish"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginLeft="@dimen/x17"
            android:textSize="18sp"
            android:textColor="@color/textcolor2"
            android:text="菜名"/>
        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x46"
            android:layout_below="@+id/tv_dish_name"
            android:layout_marginLeft="@dimen/x17"
            android:textSize="18sp"
            android:textColor="@color/textcolor2"
            android:text="价格"/>
    </RelativeLayout>
    <ImageView 
        android:id="@+id/dish_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dish_add"
        android:scaleType="fitXY"
        android:visibility="gone">
        
    </ImageView>

</RelativeLayout>
