<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/x10">
    <RelativeLayout 
        android:id="@+id/dish_info"
        android:layout_width="@dimen/x510"
        android:layout_height="@dimen/x670"
        android:background="@drawable/grid_item_bg"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x17"
        android:paddingTop="@dimen/x17"
        android:paddingBottom="@dimen/x20"
        android:visibility="visible">
        <ImageView 
            android:id="@+id/iv_dish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x475"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_2"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/iv_dish"
            android:layout_marginTop="@dimen/x25"
            android:textColor="@color/textcolor2"
            android:text="菜名"/>
        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dish_name"
            android:layout_marginTop="@dimen/x25"
            android:textSize="18sp"
            android:textColor="@color/textcolor2"
            android:text="价格"/>
        <Button 
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x26"
            android:layout_below="@+id/iv_dish"
            android:layout_marginTop="@dimen/x25"
            android:background="@drawable/menu_item_delete"/>
        <Button 
            android:id="@+id/bt_edit"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x41"
            android:layout_below="@+id/bt_delete"
            android:layout_marginTop="@dimen/x25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x26"
            android:background="@drawable/menu_item_edit"/>
    </RelativeLayout>

    <ImageView 
        android:id="@+id/dish_add"
        android:layout_width="@dimen/x510"
        android:layout_height="@dimen/x670"
        android:background="@drawable/dish_add"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</RelativeLayout>
