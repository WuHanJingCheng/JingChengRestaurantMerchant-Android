<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
	    android:layout_width="@dimen/x732"
	    android:layout_height="@dimen/x900"
	    android:layout_centerInParent="true"
	    android:background="@drawable/userinfo_bg">
	    <ImageView 
	        android:id="@+id/userinfo_finish"
	        android:layout_width="@dimen/x40"
	        android:layout_height="@dimen/x40"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="@dimen/x35"
	        android:layout_marginRight="@dimen/x35"
	        android:background="@drawable/userinfo_finish"/>
	    <RelativeLayout 
	        android:id="@+id/userinfo_rl1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/userinfo_finish">
	        <ImageView 
	            android:id="@+id/userinfo_icon"
	            android:layout_width="@dimen/x160"
	            android:layout_height="@dimen/x160"
	            android:layout_marginLeft="@dimen/x60"
	            android:src="@drawable/userinfo_icon"/>
	        <TextView
	            android:id="@+id/userinfo_username1" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/textcolor2"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/userinfo_icon"
	            android:layout_marginLeft="@dimen/x18"
	            android:textSize="@dimen/s48"
	            android:text="张三"/>
	        
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/userinfo_rl2"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/x65"
	        android:layout_below="@+id/userinfo_rl1"
	        android:layout_marginTop="@dimen/x75"
	        android:background="@color/bg4">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x58"
	            android:layout_centerVertical="true"
	            android:textColor="@color/textcolor2"
	            android:textSize="@dimen/s36"
	            android:text="公司名称："/>
	    </RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/userinfo_rl3" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/userinfo_rl2"
	        android:layout_marginTop="@dimen/x70">
	        <TextView 
	            android:id="@+id/userinfo_tv1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x65"
	            android:textSize="@dimen/s32"
	            android:textColor="@color/textcolor4"
	            android:layout_centerVertical="true"
	            android:text="姓名"/>
	        <TextView 
	            android:id="@+id/userinfo_username2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/textcolor2"
	            android:layout_toRightOf="@+id/userinfo_tv1"
	            android:layout_marginLeft="@dimen/x100"
	            android:layout_centerVertical="true"
	            android:text="张三"
	            android:textSize="@dimen/s36"/>
	    </RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/userinfo_rl4" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/userinfo_rl3"
	        android:layout_marginTop="@dimen/x70">
	        <TextView 
	            android:id="@+id/userinfo_tv2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x65"
	            android:textSize="@dimen/s32"
	            android:textColor="@color/textcolor4"
	            android:layout_centerVertical="true"
	            android:text="电话"/>
	        <TextView 
	            android:id="@+id/userinfo_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/textcolor2"
	            android:layout_toRightOf="@+id/userinfo_tv2"
	            android:layout_marginLeft="@dimen/x100"
	            android:layout_centerVertical="true"
	            android:text="+86"
	            android:textSize="@dimen/s36"/>
	    </RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/userinfo_rl5" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/userinfo_rl4"
	        android:layout_marginTop="@dimen/x70">
	        <TextView 
	            android:id="@+id/userinfo_tv3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x65"
	            android:textSize="@dimen/s32"
	            android:textColor="@color/textcolor4"
	            android:layout_centerVertical="true"
	            android:text="电话"/>
	        <TextView 
	            android:id="@+id/userinfo_job"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/textcolor2"
	            android:layout_toRightOf="@+id/userinfo_tv3"
	            android:layout_marginLeft="@dimen/x100"
	            android:layout_centerVertical="true"
	            android:text="前台"
	            android:textSize="@dimen/s36"/>
	    </RelativeLayout>
	    
	    <View 
	        android:id="@+id/userinfo_line"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/x1"
	        android:background="@color/line2"
	        android:layout_below="@+id/userinfo_rl5"
	        android:layout_marginTop="@dimen/x70"/>
	    <TextView 
	        android:id="@+id/userinfo_sign_out"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/x100"
	        android:gravity="center"
	        android:text="退出登录"
	        android:textSize="@dimen/s48"
	        android:layout_below="@+id/userinfo_line"
	        android:textColor="@color/textcolor2"
	        android:background="@drawable/userinfo_sign_out_bg"/>
	</RelativeLayout>
</RelativeLayout>
