<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:focusable="true" 
    android:focusableInTouchMode="true"
    tools:context="com.jingcheng.jingchengdininghall.LoginActivity" >
	<ImageView 
	    android:id="@+id/logo"
	    android:layout_width="@dimen/x216"
	    android:layout_height="@dimen/x273"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="@dimen/x255"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/login_logo"/>
	<EditText 
	    android:id="@+id/et_username"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/x100"
        android:textColorHint="@color/textcolor1"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/x100"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/login_username"
        android:drawablePadding="@dimen/x30"
        android:textColor="@color/textcolor2"
        android:hint="手机号/名称"
        android:background="@drawable/login_edit_bg"
        android:textSize="@dimen/s36"/>
	<EditText 
	    android:id="@+id/et_password"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/x100"
        android:textColorHint="@color/textcolor1"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="@dimen/x30"
        android:drawablePadding="@dimen/x30"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/login_password"
        android:hint="请输入密码"
        android:textColor="@color/textcolor2"
        android:background="@drawable/login_edit_bg"
        android:textSize="@dimen/s36"/>
	<ImageView 
	    android:id="@+id/bt_show_gone"
	    android:layout_width="@dimen/x40"
	    android:layout_height="@dimen/x19"
	    android:src="@drawable/login_show"
	    android:layout_alignRight="@+id/et_password"
	    android:layout_alignBottom="@+id/et_password"
	    android:layout_marginBottom="@dimen/x41"
	    android:layout_marginRight="@dimen/x20"/>
	<Button
	    android:id="@+id/bt_login" 
	    android:layout_width="@dimen/x720"
	    android:layout_height="@dimen/x100"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/et_password"
	    android:layout_marginTop="@dimen/x60"
	    android:text="登录"
	    android:gravity="center"
	    android:textColor="#1a1a1a"
	    android:textSize="@dimen/s36"
	    android:background="@drawable/login_bt_login"/>
	<TextView
	    android:id="@+id/forget" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="忘记密码"
	    android:gravity="center"
	    android:textSize="@dimen/s36"
	    android:layout_alignLeft="@+id/bt_login"
	    android:layout_below="@+id/bt_login"
	    android:layout_marginTop="@dimen/x30"
	    android:textColor="@color/textcolor1"/>
	<TextView
	    android:id="@+id/register" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="新用户注册"
	    android:gravity="center"
	    android:layout_alignRight="@+id/bt_login"
	    android:textSize="@dimen/s36"
	    android:layout_below="@+id/bt_login"
	    android:layout_marginTop="@dimen/x30"
	    android:textColor="@color/textcolor1"/>
	
</RelativeLayout>
