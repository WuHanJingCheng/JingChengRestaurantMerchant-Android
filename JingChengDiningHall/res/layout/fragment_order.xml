<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <RelativeLayout 
        android:id="@+id/orderinfo_layout"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/x575"
        android:layout_height="match_parent">
        <TextView 
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:textSize="20sp"
            android:text="订单详情"/>
        <View 
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/line1"
            android:layout_below="@+id/title"/>
        
        <TextView 
            android:id="@+id/tableId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="桌号： 002号"
            android:textColor="@color/textcolor2"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_below="@+id/line1"/>
        
        <TextView 
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顾客人数： 4人"
            android:textColor="@color/textcolor2"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginLeft="@dimen/x30"
            android:layout_below="@+id/tableId"/>
        
        <TextView 
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: dh12345"
            android:textColor="@color/textcolor2"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginLeft="@dimen/x30"
            android:layout_below="@+id/people"/>
        
        <View 
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/line1"
            android:layout_below="@+id/orderId"/>
        <LinearLayout 
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_below="@+id/line2"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_gravity="center"
                android:textColor="@color/textcolor2"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x146"
                android:layout_gravity="center"
                android:textColor="@color/textcolor2"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x52"
                android:layout_gravity="center"
                android:textColor="@color/textcolor2"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上桌"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x48"
                android:layout_gravity="center"
                android:textColor="@color/textcolor2"/>
            
        </LinearLayout>
        
        <View 
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/line1"
            android:layout_below="@+id/des"/>
        
        <ListView
            android:id="@+id/order_lv"
            android:layout_below="@+id/line3"
            android:layout_above="@+id/line5"            
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View android:id="@+id/line5" 
            android:layout_width="match_parent"
             android:layout_height="1dp" 
             android:layout_above="@+id/time" 
             android:layout_marginRight="@dimen/x24" 
             android:layout_marginLeft="@dimen/x20" 
             android:layout_marginBottom="@dimen/x5" 
             android:background="@color/line1" />
        <LinearLayout 
            android:id="@+id/time" 
            android:layout_width="match_parent" 
            android:layout_height="@dimen/x40"
             android:layout_above="@+id/line4" 
             android:layout_marginBottom="@dimen/x5"
              android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/x30" 
                android:textSize="12sp" 
                android:textColor="@color/textcolor2" 
                android:text="服务员： 张三" />
            <TextView 
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_marginLeft="@dimen/x122" 
                 android:textSize="12sp" 
                 android:textColor="@color/textcolor2" 
                 android:text="2016-10-08" />
            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/x30" 
                android:textSize="12sp" 
                android:textColor="@color/textcolor2" 
                android:text="18:20" />
            
            
        </LinearLayout>
        	<View android:id="@+id/line4" 
        	    android:layout_width="match_parent" 
        	    android:layout_height="1dp" 
        	    android:layout_above="@+id/heji"
        	     android:layout_marginRight="@dimen/x24" 
        	     android:layout_marginLeft="@dimen/x20" 
        	     android:layout_marginBottom="@dimen/x40" 
        	     android:background="@color/line1" />
        	<TextView 
        	    android:id="@+id/heji" 
        	    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textSize="26sp" 
				android:textColor="@color/textcolor2" 
				android:layout_alignParentRight="true" 
				android:layout_marginRight="@dimen/x30" 
				android:layout_marginBottom="@dimen/x50" 
				android:gravity="center" 
				android:layout_above="@+id/pay" 
				android:text="合计     98.00" />
        	<Button
	            android:id="@+id/pay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:background="@drawable/pay"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="@dimen/x60"
	            android:text="结账"/>
        	    
        
          
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/orderinfo_layout"
        android:background="@color/bg2">
        <RelativeLayout 
            android:id="@+id/comm"
            android:layout_marginTop="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="2人桌"
                android:textSize="16sp"
                android:background="@drawable/option_bg"
                android:textColor="@color/textcolor3"/>
            <TextView
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:layout_centerVertical="true"
                android:text="4人桌"
                android:layout_toRightOf="@+id/p2"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/option_bg"
                android:textColor="@color/textcolor3"/>
            <TextView
                android:id="@+id/p6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:layout_centerVertical="true"
                android:text="6人桌"
                android:layout_toRightOf="@+id/p4"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/option_bg"
                android:textColor="@color/textcolor3"/>
            <Button
                android:id="@+id/add_table" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_table"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/p6"
                android:layout_marginLeft="@dimen/x60"/>
            
            <TextView 
                android:id="@+id/kongxian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:textColor="@color/textcolor3"
                android:textSize="16sp"
                android:text="空闲"/>
            <ImageView
                android:id="@+id/kongxian_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/kongxian_text"
                android:layout_marginRight="@dimen/x20"
                android:src="@drawable/kongxian_icon"/>
            <TextView 
                android:id="@+id/jiucan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                 android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/kongxian_icon"
                android:layout_marginRight="@dimen/x40"
                android:text="就餐中"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/jiucan_text"
                android:layout_marginRight="@dimen/x20"
                android:layout_centerVertical="true"
                android:src="@drawable/jiucan_icon"/>
        </RelativeLayout>
	        <GridView 
	            android:id="@+id/grid_order"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@+id/comm"
	            android:divider="@null"
	            android:scrollbars="none"
	            android:layout_marginLeft="@dimen/x20"
	            android:layout_marginRight="@dimen/x20"
	            android:layout_marginTop="@dimen/x60"
		        android:verticalSpacing="@dimen/x100"
		        android:horizontalSpacing="@dimen/x100"
		        android:numColumns="4">
	        </GridView>
    </RelativeLayout>

</RelativeLayout>
