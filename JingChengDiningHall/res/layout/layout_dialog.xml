<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   
    <RelativeLayout 
        android:layout_width="@dimen/x842"
        android:layout_height="@dimen/x502"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg">
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x40"
            android:textSize="@dimen/s36"
            android:textColor="#191919"
            android:text="删除操作"/>
        <View 
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/x40"
            android:background="#747474"/>
        <TextView 
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x250"
            android:text="确定删除?"
            android:textSize="@dimen/s36"
            android:layout_below="@+id/line"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="#f3f3f3"
            android:textColor="#191919"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x24"
            android:layout_marginTop="@dimen/x24"
            android:paddingLeft="@dimen/x35"
            android:paddingRight="@dimen/x35"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/dialog_exit"
                android:layout_width="@dimen/x310"
                android:layout_height="@dimen/x76"
                android:layout_marginLeft="@dimen/x35"
                android:layout_marginRight="@dimen/x35"
                android:layout_weight="1"
                android:textSize="@dimen/s36"
            	android:textColor="#191919"
            	android:gravity="center"
                android:text="确定"
                android:background="@drawable/dialog_exit_select"/>
            <Button 
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/x310"
                android:layout_height="@dimen/x76"
                android:layout_marginLeft="@dimen/x35"
                android:layout_marginRight="@dimen/x35"
                android:textSize="@dimen/s36"
            	android:textColor="#191919"
            	android:gravity="center"
                android:background="@drawable/dialog_cancel_select"
                android:text="取消"
                android:layout_weight="1"/>
            
        </LinearLayout>
        
    </RelativeLayout>
 	
 
</RelativeLayout>